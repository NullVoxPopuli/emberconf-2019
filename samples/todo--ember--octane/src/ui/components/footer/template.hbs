<footer class='footer'>

  <span class='todo-count'>
    <strong>{{this.todosCount}} {{this.itemWord}} left</strong>
  </span>

  <ul class="filters">
    <li>
      <Link @to='application'>All</Link>
    </li>

    <li>
      <Link @to='uncompleted'>Active</Link>
    </li>

    <li>
      <Link @to='completed'>Completed</Link>
    </li>
  </ul>

  {{#if this.showClearButton}}
    <button
      {{on 'click' this.clearCompleted}}
      class="clear-completed"
    >
      Clear completed
    </button>
  {{/if}}
</footer>
