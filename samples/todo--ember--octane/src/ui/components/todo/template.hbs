<li
  {{did-insert this.setElement}}
  class='
    {{if this.editing 'editing'}}
    {{if this.isCompleted 'completed'}}
  '
>
  <div class="view">
    <input
      type="checkbox"
      checked={{todo.completed}}
      class="toggle"
      onchange={{action (mut @todo.completed) value='target.checked'}} />

    <label {{on 'doubleclick' this.didClickLabel}}>
      {{todo.text}}
    </label>

    <button class="destroy" {{on 'click' this.destroyTodo}}></button>
  </div>

  <input
    type='text'
    value={{@todo.text}}
    oninput={{action (mut @todo.text) value='target.value'}}
    {{on 'blur' this.didFinishEditing}}
    {{on 'keydown' this.handleKeydown}}
  >
</li>